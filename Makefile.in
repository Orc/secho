CC=@CC@
bindir=@exedir@
mandir=@mandir@

secho: secho.c cstring.h config.h
	$(CC) -o secho secho.c

clean:
	rm -f secho secho.o

distclean spotless: clean
	rm -f @GENERATED_FILES@ @CONFIGURE_FILES@

install: secho
	@INSTALL_PROGRAM@ secho $(bindir)
	@INSTALL_DIR@ $(mandir)/man1
	@INSTALL_DATA@ secho.1 $(mandir)/man1
